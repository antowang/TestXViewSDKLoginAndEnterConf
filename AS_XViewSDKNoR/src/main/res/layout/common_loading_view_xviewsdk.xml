<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_loading_xviewsdk"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name_xviewsdk"
        android:scaleType="fitXY"
        android:src="@drawable/no_chat_xviewsdk" />

    <TextView
        android:id="@+id/tv_loading_xviewsdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_loading_xviewsdk"
        android:layout_centerHorizontal="true"
        android:text="@string/loading_xviewsdk"
        android:textColor="@color/gray_font_xviewsdk" />

</RelativeLayout>