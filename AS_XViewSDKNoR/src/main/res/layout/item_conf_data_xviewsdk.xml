<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/itemback_selector_xviewsdk"
    android:descendantFocusability="blocksDescendants"
    android:padding="15dp" >

    <TextView
        android:id="@+id/item_tv_docname_xviewsdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="14"
        android:singleLine="true"
        android:textColor="@color/black_xviewsdk"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/item_iv_zhixiang1_xviewsdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/indicat_selector_xviewsdk"
        android:contentDescription="@string/account_xviewsdk"
        android:padding="10dp" />

    <TextView
        android:id="@+id/item_tv_docnumbers_xviewsdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@id/item_iv_zhixiang1_xviewsdk"
        android:singleLine="true"
        android:textColor="@color/black_xviewsdk"
        android:textSize="16sp" />

</RelativeLayout>