<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg_xviewsdk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_bg_xviewsdk"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_title_xviewsdk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black_xviewsdk"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_msg_xviewsdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@color/black_xviewsdk"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/alertdialog_line_xviewsdk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_neg_xviewsdk"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_left_selector_xviewsdk"
            android:gravity="center"
            android:nextFocusLeft="@+id/btn_pos_xviewsdk"
            android:nextFocusRight="@+id/btn_pos_xviewsdk"
            android:textColor="@color/actionsheet_blue_xviewsdk"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_line_xviewsdk"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:background="@color/alertdialog_line_xviewsdk" />

        <Button
            android:id="@+id/btn_pos_xviewsdk"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_right_selector_xviewsdk"
            android:gravity="center"
            android:nextFocusLeft="@+id/btn_neg_xviewsdk"
            android:nextFocusRight="@+id/btn_neg_xviewsdk"
            android:textColor="@color/actionsheet_blue_xviewsdk"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>