<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rlChangeCamera_xviewsdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_capture_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/conf_switchcamera_selector_xviewsdk" />


        <ImageView
            android:id="@+id/mute_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/conf_micro_fayan_selector_xviewsdk" />


        <ImageView
            android:id="@+id/id_show_close_video_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/open_camera_selector_xviewsdk" />

        <ImageView
            android:id="@+id/id_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/conf_more_selector_xviewsdk"
            />
    </LinearLayout>




        <ImageView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/id_hang_up_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_marginBottom="20dp"
            android:src="@drawable/conf_exit_selector_xviewsdk" />

</FrameLayout>