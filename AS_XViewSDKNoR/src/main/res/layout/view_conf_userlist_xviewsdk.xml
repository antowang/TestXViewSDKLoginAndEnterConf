<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_back_xviewsdk" >

    <RelativeLayout
        android:id="@+id/rlTitleUserList_xviewsdk"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1d93c3"
        android:clickable="true"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/ivBackUserList_xviewsdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/login_back_xviewsdk" />

        <TextView
            android:id="@+id/tvUserListTitle_xviewsdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/userlist_xviewsdk"
            android:textColor="#ffffff" />
    </RelativeLayout>




    <ListView
        android:id="@+id/lv_conf_userlist_xviewsdk"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="#f0f0f0"
        android:layout_below="@id/rlTitleUserList_xviewsdk"
        android:clickable="true"
        android:divider="#f0f0f0"
        android:dividerHeight="20dp"
        android:fastScrollEnabled="true"
        android:focusable="true"
        android:listSelector="@null" >
    </ListView>


    <ImageView
        android:id="@+id/ivChat_xviewsdk"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/iv_chat_selector_xviewsdk"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>